{% extends 'layouts/base.html.twig' %}

{% block title %}{% trans %}Reset your password{% endtrans %}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-5 mb-3 text-center">{% trans %}Reset your password{% endtrans %}</h1>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.newPassword) }}
            <button type="submit" class="btn btn-primary btn-lg btn-block">{% trans %}Reset password{% endtrans %}</button>
        {{ form_end(resetForm) }}
    </div>
</div>
    
{% endblock %}
