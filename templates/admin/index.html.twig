        <h1>{% trans %}Users List{% endtrans %}</h1>

    <table>
        <thead>
            <tr>
                <th>{% endtrans %}ID{% endtrans %}</th>
                <th>{% endtrans %}Name{% endtrans %}</th>
                <th>{% endtrans %}Email{% endtrans %}</th>
                <!-- Ajoutez d'autres colonnes si nÃ©cessaire -->
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.getFullName }}</td>
                    <td>{{ user.getEmail }}</td>
                    <td>{{ user.getRoles()|join(', ') }}</td>
                    <td>
                        <form action="{{ path('app_admin_user_delete', {'id': user.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">{% endtrans %}Delete{% endtrans %}</button>
                        </form>
                    </td>                
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
