{% extends 'layouts/base.html.twig' %}

{% block title %}{% trans %}Log in!{% endtrans %}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-3 text-center">{% trans %}Please sign in{% endtrans %}</h1>
        <p class="mb-5 text-center text-muted">{% trans %}Enter your ids{% endtrans %}</p>

        {% if error %}
            <div class="mb-3 alert alert-danger rounded" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" class="account_form">
            <div class="mb-3 form-group">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3 form-group">
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
            </div> 
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}
            <div class="mb-3 d-flex justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                    <label class="form-check-label" for="_remember_me">{% trans %}Remember me{% endtrans %}</label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}">{% trans %}Forgot password?{% endtrans %}</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-block btn-primary" type="submit">
                {% trans %}Sign in{% endtrans %}
            </button>

            <p class="mt-5 mb-3 text-center text-muted">{% trans %}Not registered yet?{% endtrans %}<a href="{{ path('app_register') }}">{% trans %}Create an account{% endtrans %}</a></p>
        </form>
    </div>
</div>
{% endblock %}