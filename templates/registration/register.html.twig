{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-3 alert alert-error rounded" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="my-5 text-center">Create an account</h1>

        {{ form_errors(registrationForm) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(registrationForm.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(registrationForm.lastName) }}
            </div>
        
        </div>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label:'password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>

            <p class="mt-5 mb-3 text-center text-muted">Already have an account <a href="{{ path('app_login') }}">Login</a></p>
        {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
