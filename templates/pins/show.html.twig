{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 mx-auto">
        <article class="pin">
            <div class="mw-100 overflow-hidden rounded-top">
                <a href="{{ path('app_pins_show', {id: pin.id}) }}">
                    <img class="" src="{{ pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeholder.jpeg')}}" style="width: 300px; height: 300px;" alt="{{ pin.title }}">
                </a>
            </div>
            <h1 class="pl-3 pt-3 h-5 text-muted"><a href="{{ path('app_pins_show', {id: pin.id}) }}" class="text-muted text-decoration-none" >{{ pin.title }} </a></h1>
            <p class="pl-3 pb-3 text-muted">
                <small>
                    Submitted 
                    <time datetime="{{ pin.createdAt|date('Y-m-d H:i:s') }}">{{ pin.createdAt|ago }}</time>
                    by [OWNER FULL NAME]
                </small>
            </p>
            <p class="pl-3 pb-3">
                {{ pin.description }}
            </p>

            <div class="pl-3 pb-3">
                <a href="{{ path('app_pins_edit', {id: pin.id}) }}" class="btn btn-light">Modifier</a>
                <a href="#" onclick="event.preventDefault();confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();"class="btn btn-light">Delete</a>

                <form id="js-pin-delete-form" action="{{ path('app_pins_delete', {id: pin.id}) }}" method="POST" style="display:none;">
                <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
                    <input type="hidden" name="_method" value="DELETE">
                </form>
            </div>
        </article>


        
    </div>
</div>

{% endblock %}