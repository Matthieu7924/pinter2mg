{% extends 'layouts/base.html.twig' %}

{% block title %} {% trans %}Edit{% endtrans %} {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5 text-center" >{% trans %}Update Profile{% endtrans %}</h1>
            
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                </div>    
                <div class="col-md-6">
                        {{ form_row(form.lastName) }}
                </div>         
            </div>

            {# {{ form_row(form.profileImage) }} Affiche le champ de téléchargement de l'image de profil #}


            {# {{ form_row(form.email) }} #}
            {# autre solution afficher le reste des champs du formulaire qui n'on pas encore été ajoutés #}
            {{ form_rest(form) }}


                <button type="submit" class="btn btn-primary btn-lg btn-block">Apply changes</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 